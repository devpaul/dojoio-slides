image-li(src) {
	content: '';
	display: inline-block;
	height: 32px;
	width: 32px;
	background-size: 32px 32px;
	background-repeat: no-repeat;
	background-image: url(src);
	margin-right: 4px;
}

div.slide__boilerplate {
	color: #333;
	display: flex;
	flex-wrap: wrap;
	font-style: italic;
	justify-content: space-around;
	padding: 0 5%;
	position: absolute;
	z-index: 1;
}

div.slide__boilerplate p {
	background: #FAFAFA;
	color: #333;
	font-size: 32px;
	font-weight: 300;
	margin-right: 48px;
	opacity: 0.8;
	padding: 4px 15px;
	text-transform: uppercase;
	text-shadow: none;
}

.captioned-image-row {
	display: flex;
	justify-content: center;

	> div {
		display: flex;
		flex: 1;
		flex-direction: column;
		max-width: 420px;

		img {
			border: none;
			box-shadow: none;
			background: none;
		}
	}
}

.reveal {
	.removeFormatting {
		border: none !important;
		background: none !important;
		box-shadow: none !important
		margin: 0;
	}

	.center-column-flex {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.tall {
		height: 90vh;
		max-height: 90vh;
	}

	.absolute-center {
		position: absolute;
		top: 0;
		width: 100%;
		bottom: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		color: white;
		align-content: center;
		flex-direction: column;
	}

	.two-column {
		display: flex;
		justify-content: center;

		> * {
			flex: 1 1;
		}

		&.medium {
			> * {
				max-width: 500px;
			}
		}
	}

	.no-style {
		list-style: none;
		margin-left: -36px;
	}

	.twitter:before {
		image-li("../images/Twitter_bird_logo_2012.svg.png")
	}

	.github:before {
		image-li("../images/GitHub-Mark/PNG/GitHub-Mark-32px.png")
	}

	.translucent-black-bg {
		background: rgba(0, 0, 0, 0.8);
	}

	img.small {
		max-width: 32px;
		max-height: 32px;
	}

	.pipeline {
		display: flex;
		flex-wrap: wrap;

		> p {
			flex: 1 1;
			white-space: nowrap;
			text-align: left;
			min-width: 15em;
		}
	}

	.inverse-gh {
		background-color: white !important;
		border-radius: 16px;
		padding: 1px;
		margin: -1px;
		border: none !important;
		box-shadow: none !important
	}

	.dojo {
		color: white;

		h1, h2, h3 {
			color: white;
		}

		.sub-title {
			color: #c8c8c8;
		}

		img.medium {
			min-width: 300px;
		}

		.table {
			.row {
				display: flex;

				.icon-cell {
					flex: 0 0 100px;
				}
			}

		}
	}
}
